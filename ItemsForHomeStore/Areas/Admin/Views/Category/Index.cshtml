@model List<Category>

<div class="card bg-light mb-3 mt-3">
    <div class="card-header bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center text-primary">
                <h2 class="py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4 pb-2">
            <div class="col-6">
                <a asp-controller="Category" asp-action="Create" class="btn btn-info">
                    <i class="bi bi-plus-square"></i>
                    Create New Category
                </a>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                        <td>

                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryID" class="btn btn-info mx-2">
                                <i class="bi bi-pen"></i>
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryID" class="btn btn-info mx-2">
                                <i class="bi bi-trash3"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>