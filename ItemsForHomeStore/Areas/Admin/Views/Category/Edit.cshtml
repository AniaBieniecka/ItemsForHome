@model Category

<div class="card border-primary-0 mt-4">
    <div class="card-header  bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center text-primary">
                <h2 class=" py-2">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="CategoryID" hidden />
            <div class="form-floating py-2 col-12">
                <input asp-for="Name" class="form-control border-0 shadow" />
                <label asp-for="Name" class="ms-2 text-dark"></label>

                <span asp-validation-for="Name" class="text-primary"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                <label asp-for="DisplayOrder" class="ms-2 text-dark"></label>
                <span asp-validation-for="DisplayOrder" class="text-primary"></span>
            </div>
            <div class="row py-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-info form-control">Update</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-info form-control">
                        Back to List
                    </a>
                </div>
            </div>


        </form>
    </div>
</div>




@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}