@model Category

<div class="card border-primary-0 mt-4">
    <div class="card-header  bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center text-primary">
                <h2 class=" py-2"> Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post" class="row">
            <input asp-for="CategoryID" hidden />
            <div class="form-floating py-2 col-12">
                <input asp-for="Name" disabled class="form-control border-0 shadow" />
                <label asp-for="Name" class="ms-2 text-dark"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
                <label asp-for="DisplayOrder" class="ms-2 text-dark"></label>
            </div>
            <div class="row py-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-info form-control">Delete</button>

                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-info form-control">
                        Back to List
                    </a>
                </div>
            </div>


        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}