@model List<Product>

<div class="card bg-light mb-3 mt-3">
    <div class="card-header  bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center text-primary">
                <h2 class=" py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4 pb-2">
            <div class="col-6">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-info">
                    <i class="bi bi-plus-square"></i>
                    Create New Product
                </a>
            </div>
        </div>

        <table id="tblData" class="table " style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Product description</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Description</td>
                        <td>@obj.Price</td>
                        <td>@obj.Category.Name</td>
                        <td>

                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.ProductID" class="btn btn-info mx-2">
                                <i class="bi bi-pen"></i>
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ProductID" class="btn btn-info mx-2">
                                <i class="bi bi-trash3"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
